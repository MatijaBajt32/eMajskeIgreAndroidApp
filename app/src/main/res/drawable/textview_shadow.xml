<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#C0C0C0"/> <!-- Shadow color -->
            <corners android:radius="4dp"/> <!-- Corner radius -->
        </shape>
    </item>
    <!-- Foreground Layer (TextView Background) -->
    <item android:left="1dp" android:top="0dp" android:right="1dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Background color of TextView -->
            <corners android:radius="4dp"/>
        </shape>
    </item>
</layer-list>